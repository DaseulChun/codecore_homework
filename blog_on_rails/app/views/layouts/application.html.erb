<!DOCTYPE html>
<html>
  <head>
    <title>BlogOnRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <%= flash[:notice] || flash[:alert] %>
    <div class="d-flex flex-row justify-content-between bg-light">
      <h5 class="text-primary my-auto mx-3">Blog On Rails</h5>
      <ul class="nav mx-3">
        <li class="nav-item">
          <%= link_to 'Home', posts_path, class:"nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to 'New Post', new_post_path, class:"nav-link" %> 
        </li>
      </ul>
    </div>
    <%= yield %>
  </body>
</html>
