<%- include("../partials/header") %>
<section>
    <form action="/cohorts/<%= cohort.id %>" method="POST">
    <input type="hidden" value="PATCH" name="_method">
      <div class="form-group">
        <label for="logoUrl">Logo Url</label>
        <input 
          type="text" 
          name="logoUrl" 
          value="<%= cohort.logoUrl %>"
          class="form-control"
        >
      </div>
  
      <div class="form-group">
        <label for="name">Name</label>
        <input 
          type="text" 
          name="name" 
          value="<%= cohort.name %>"
          class="form-control"
        >
      </div>
  
      <div class="form-group">
        <label for="members">Members</label>
        <textarea 
          type="text" 
          name="members"
          class="form-control"><%= cohort.name %></textarea>
      </div>
        <input type="submit" value="Edit" class="btn btn-outline-primary">
    </form>
  </section>
<%- include("../partials/footer") %>
